<link rel="stylesheet" href="/css/leaderboard.css">
<div class="l-wrapper">
    <div class="c-header">
      <img class="c-logo" src="https://i.ibb.co/60STw80/maxresdefault.jpg" draggable="false" />
      <button class="c-button c-button--primary refresh-button" onClick="window.location.reload();">Refresh</button>
    </div>
    <div class="c-header">
      <h4>Every 500 Streams ON PARALYZED = 1 Raffle Ticket</h4>
      <h4>Song link: <a href="https://open.spotify.com/track/5svL1PkWw8hPEAOdTNLexy?si=86aed6639ab44d35">here</a></h4>

    </div>
    <div class="c-header">
      <h4>#1 Streamer instantly wins Gaming PC</h4>
    </div>
    <div class="c-header">
      <h4>Get +1 raffle ticket for every TikTok created using the official Paralyzed audio</h4>
      <h5>Send Proof to #tiktok-proof in <a href="https://discord.gg/sueco">Discord</a> to redeem tickets</h5>
    </div>
    <button class="c-button c-button--primary prize-button" onclick="window.location.href='/prizes'">View Prizes</button>
    <div class="l-grid">
        <div class="l-grid__item l-grid__item--sticky">
            <div class="c-card u-bg--light-gradient u-text--dark">
                <div class="c-card__body">
                    <div class="u-display--flex u-justify--space-between">
                        <div class="u-text--left">
                            <div class="u-text--small">My Rank</div>
                            <h2>{{user.rank}} Place</h2>
                        </div>
                        <div class="" style="padding-right: 16px; padding-left: 17px;">
                            <div class="u-text--small">My Streams:</div>
                            <h2>{{user.streamCount}}</h2>
                        </div>
                        <div class="u-text--right">
                          <div class="u-text--small">My Tickets:</div>
                          <h2>{{user.tickets}}</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="c-card">
                <div class="c-card__body">
                    <div class="u-text--center" id="winner"></div>
                    	<div class="u-text-small u-text--medium u-mb--16">Top Streamer This Week</div>
                      <img class="c-avatar c-avatar--lg" src="{{winner.discordAvatar}}"/>
                      <h3 class="u-mt--16">{{winner.discordUsername}}</h3>
                      <span class="u-text--teal u-text--small">{{winner.discordUsername}}</span>
                </div>
            </div>
        </div>
        <div class="l-grid__item">
            <div class="c-card">
                <div class="c-card__header">
                    <h3>Raffle Tickets</h3><select class="c-select">
                        <option selected="selected">Sunday, Feb. 23 - Sunday, Feb. 30</option>
                    </select>
                </div>
                <div class="c-card__body">
                    <ul class="c-list" id="list">
                        <li class="c-list__item">
                            <div class="c-list__grid">
                                <div class="u-text--left u-text--small u-text--medium">Rank</div>
                                <div class="u-text--left u-text--small u-text--medium">Discord User</div>
                                <div class="u-text--right u-text--small u-text--medium"># of Streams</div>
                            </div>
                        </li>
                        {{#each users}}
                          <li class="c-list__item">
                        		<div class="c-list__grid">
                            <div class="c-flag c-place u-bg--transparent">{{rank}}</div>
                              <div class="c-media">
                                <img class="c-avatar c-media__img" src="{{discordAvatar}}" />
                                <div class="c-media__content">
                                  <div class="c-media__title">{{discordUsername}}</div>
                                  <a class="c-media__link u-text--small" href="https://instagram.com/${member.handle}" target="_blank">{{lastFMUsername}}</a>
                                </div>
                              </div>
                              <div class="u-text--right c-kudos">
                                <div class="u-mt--8">
                                  <strong>{{streamCount}}</strong>
                                </div>
                              </div>
                            </div>
                          </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


